{
  "name": "synvert-vscode-extension",
  "displayName": "synvert-vscode-extension",
  "description": "vscode exension for synvert",
  "version": "0.0.1",
  "author": {
    "name": "Ricahrd Huang"
  },
  "icon": "media/logo.png",
  "engines": {
    "node": "^16.16.0",
    "vscode": "^1.69.0"
  },
  "publisher": "xinminlabs",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:synvert:insertCode",
    "onView:synvert-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "synvert-sidebar-view",
          "title": "Synvert",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "synvert-sidebar-view": [
        {
          "type": "webview",
          "id": "synvert-sidebar",
          "name": "Synvert",
          "icon": "media/logo.svg",
          "contextualTitle": "Synvert"
        }
      ]
    },
    "commands": [
      {
        "command": "synvert.insertCode",
        "category": "Synvert",
        "title": "Insert code from current selection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
    "package": "rollup -c && webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rollup": "^2.76.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "ruby-spawn": "^1.3.0"
  }
}
