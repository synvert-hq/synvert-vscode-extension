{
  "name": "synvert",
  "displayName": "Synvert",
  "description": "A find / replace alternative based on AST nodes, makes it easier to rewrite (refactor) code",
  "version": "0.8.0",
  "author": {
    "name": "Ricahrd Huang"
  },
  "icon": "media/logo.png",
  "engines": {
    "node": "^16.16.0",
    "vscode": "^1.69.0"
  },
  "publisher": "xinminlabs",
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "synvert",
    "javascript",
    "typescript",
    "ruby",
    "rewrite",
    "refactor"
  ],
  "activationEvents": [
    "onView:synvert-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidebar-view",
          "title": "Synvert",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "sidebar-view": [
        {
          "type": "webview",
          "id": "synvert-sidebar",
          "name": "Synvert",
          "icon": "media/logo.svg",
          "contextualTitle": "Synvert"
        }
      ]
    },
    "commands": [],
    "configuration": {
      "title": "Synvert",
      "properties": {
        "synvert.ruby.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable synvert ruby."
        },
        "synvert.ruby.number_of_workers": {
          "type": "number",
          "default": 4,
          "description": "Number of workers to run in parallel."
        },
        "synvert.ruby.single_quote": {
          "type": "boolean",
          "default": true,
          "description": "Use single quotes instead of double quotes."
        },
        "synvert.ruby.tab_width": {
          "type": "number",
          "default": 2,
          "description": "Specify the number of spaces per indentation-level."
        },
        "synvert.javascript.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable synvert javascript."
        },
        "synvert.javascript.max_file_size": {
          "type": "number",
          "default": 100,
          "description": "Skip file if its size is more than the size. (KB)"
        },
        "synvert.javascript.single_quote": {
          "type": "boolean",
          "default": false,
          "description": "Use single quotes instead of double quotes."
        },
        "synvert.javascript.semi": {
          "type": "boolean",
          "default": true,
          "description": "Print semicolons at the ends of statements."
        },
        "synvert.javascript.tab_width": {
          "type": "number",
          "default": 2,
          "description": "Specify the number of spaces per indentation-level."
        },
        "synvert.typescript.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable synvert typescript."
        },
        "synvert.typescript.max_file_size": {
          "type": "number",
          "default": 100,
          "description": "Skip file if its size is more than the size. (KB)"
        },
        "synvert.typescript.single_quote": {
          "type": "boolean",
          "default": false,
          "description": "Use single quotes instead of double quotes."
        },
        "synvert.typescript.semi": {
          "type": "boolean",
          "default": true,
          "description": "Print semicolons at the ends of statements."
        },
        "synvert.typescript.tab_width": {
          "type": "number",
          "default": 2,
          "description": "Specify the number of spaces per indentation-level."
        }
      }
    },
    "keybindings": [
      {
        "command": "synvert-sidebar.focus",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
    "package": "rollup -c && webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rollup": "^2.76.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "synvert-core": "^2.4.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.9.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "compare-versions": "^5.0.1",
    "node-fetch": "^3.2.10",
    "node-machine-id": "^1.1.12",
    "svelte-select": "^4.4.7",
    "synvert-server-common": "^1.1.1",
    "synvert-ui-common": "^1.5.0"
  },
  "homepage": "https://synvert.net",
  "bugs": {
    "url": "https://github.com/xinminlabs/synvert/issues",
    "email": "flyerhzm@gmail.com"
  }
}
